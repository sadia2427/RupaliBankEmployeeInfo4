<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" >

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="8dp"
       android:background="#FFFFFF"
       android:layout_alignParentTop="true"
       android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="8dp"

          android:orientation="vertical">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:orientation="vertical"
             android:id="@+id/id_headOffice">

         <TextView
             android:text="Head Offices Branches"
             android:id="@+id/div_head"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/deepOrange"
             android:textSize="12sp"
             android:textStyle="bold" />
         <TextView
             android:id="@+id/bank_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:text="Rupali Bank Limited"
             android:textColor="@color/colorBlack"
             />
         <TextView
             android:text="Secreta"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textStyle="bold"
             android:layout_marginBottom="4dp"
             android:textColor="@color/browser_actions_text_color"
             />

         <View
             android:layout_width="match_parent"
             android:background="@color/colorView"
             android:layout_margin="2dp"
             android:layout_height="1dp"
             />
         </LinearLayout>
         <LinearLayout
             android:orientation="vertical"
            android:id="@+id/field_offices"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

         <TextView
             android:text="Head Offices Branches"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/deepOrange"
             android:textSize="12sp"
             android:layout_marginTop="6dp"
             android:textStyle="bold" />
         <TextView

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:text="Rupali Bank Limited"
             android:textColor="@color/colorBlack"
             />
         <TextView
             android:text="Secreta"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textStyle="bold"
             android:layout_marginBottom="4dp"
             android:textColor="@color/browser_actions_text_color"
             />

         <View
             android:layout_width="match_parent"
             android:background="@color/colorView"
             android:layout_margin="2dp"
             android:layout_height="1dp"
             />
         </LinearLayout>
         <LinearLayout
             android:id="@+id/over_seasBranches"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:orientation="vertical">

         <TextView
             android:text="Head Offices Branches"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/deepOrange"
             android:textSize="12sp"
             android:layout_marginTop="6dp"
             android:textStyle="bold" />
         <TextView

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:text="Rupali Bank Limited"
             android:textColor="@color/colorBlack"
             />
         <TextView
             android:text="Secreta"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="12sp"
             android:textStyle="bold"
             android:layout_marginBottom="4dp"
             android:textColor="@color/browser_actions_text_color"
             />
         </LinearLayout>
      </LinearLayout>


   </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>