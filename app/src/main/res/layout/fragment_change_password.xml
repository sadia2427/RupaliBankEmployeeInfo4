<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.changepassword.ChangePasswordFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:text="Change Password"
        android:textStyle="bold|italic"
        android:textColor="@color/colorWhite"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:background="@color/colorRed"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/reg_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:background="@drawable/change_button"
        android:hint="Please Enter Your Registration No"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_below="@+id/reg_no"
        android:id="@+id/old_pass"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/change_button"
        android:gravity="center"
        android:hint="Old Password"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_below="@+id/old_pass"
        android:id="@+id/new_pass"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/change_button"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:hint="New Password"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_below="@+id/new_pass"
        android:id="@+id/confirm_pass"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:background="@drawable/change_button"
        android:hint="Confirm Password"
        android:inputType="textPersonName"
        />
        <Button
            android:id="@+id/email_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textColor="#ffff"
            android:background="@color/colorTeel"
            style="@style/Widget.AppCompat.Button.Colored" />

    </LinearLayout>
</RelativeLayout>