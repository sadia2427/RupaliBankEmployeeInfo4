      android:minLines="3"
    />
  </LinearLayout>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="wrap_content"
      android:layout_marginLeft="40dp"
      android:layout_height="wrap_content">
    <TextView
        android:gravity="left"
        android:paddingLeft="16dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorRed"
        android:text="Rupali Bank Ltd."
        />
    <TextView
        android:gravity="left"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:text="Head Office, ICT OPERATIONS DIVISION,"
        />
    <TextView
        android:gravity="left"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:text="9th floor, 34 Dilkusha C/A, Dhaka-1000 |"
        />
    <TextView
        android:id="@+id/text_footer"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:textSize="14sp"
        android:textColor="@color/teal_400"
        android:text="Designed  Developed  By "
        />
    <TextView
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="16dp"
        android:textColor="@color/text_black"
        android:text="ICT Operations Division"
        />
